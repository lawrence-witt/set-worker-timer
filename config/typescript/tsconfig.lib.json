{
	"compilerOptions": {
		"outDir": "../../lib/",
		"noImplicitAny": true,
		"target": "es6",
		"skipLibCheck": true,
		"module": "es6",
        "esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"removeComments": true
	},
	"include": ["../../src/**/*"],
	"exclude": ["../../src/module/__mocks__/**/*"]
}