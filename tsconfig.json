{
	"compilerOptions": {
		"outDir": "./dist/",
		"declarationDir": "./dist/@types",
		"noImplicitAny": true,
		"target": "es5",
		"lib": ["es5", "es6", "dom"],
		"module": "commonjs",
		"declaration": true,
        "allowJs": true,
        "esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true
	},
	"include": ["src/**/*"]
}